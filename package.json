{
  "name": "@sasjs/cli",
  "description": "Command line interface for SASjs",
  "main": "index.js",
  "files": [
    "build/**/*"
  ],
  "scripts": {
    "start": "nodemon --watch \"src/**/*\" --exec \"npm run build && npm link --force\"",
    "build": "rimraf build && tsc -p . && npm run cp-json",
    "cp-json": "cp-cli ./src/config.json build/config.json && cp-cli ./src/config-sasonly.json build/config-sasonly.json",
    "test": "jest --silent --runInBand",
    "semantic-release": "semantic-release -d",
    "lint:fix": "npx prettier --write \"{src,test}/**/*.{ts,tsx,js,jsx,html,css,sass,less,json,yml,md,graphql}\"",
    "lint": "npx prettier --check \"{src,test}/**/*.{ts,tsx,js,jsx,html,css,sass,less,json,yml,md,graphql}\""
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "bin": {
    "sasjs": "build/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sasjs/cli.git"
  },
  "keywords": [
    "SAS",
    "Viya",
    "SASjs"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sasjs/cli/issues"
  },
  "homepage": "https://github.com/sasjs/cli",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@sasjs/adapter": "^1.18.7",
    "@sasjs/core": "^1.12.3",
    "base64-img": "^1.0.4",
    "btoa": "^1.2.1",
    "chalk": "^4.1.0",
    "dotenv": "^8.2.0",
    "esm": "^3.2.25",
    "find": "^0.3.0",
    "fs": "0.0.1-security",
    "fs-extra": "^9.0.1",
    "jsdom": "^16.4.0",
    "jwt-decode": "^3.1.2",
    "lodash.groupby": "^4.6.0",
    "lodash.uniqby": "^4.7.0",
    "ora": "^5.1.0",
    "prompt": "^1.0.0",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.11.5",
    "@types/node": "^14.14.10",
    "cp-cli": "^2.0.0",
    "babel-jest": "^26.5.0",
    "jest-cli": "^26.5.0",
    "mock-stdin": "^1.0.0",
    "nodemon": "^2.0.6",
    "puppeteer": "^5.3.1",
    "semantic-release": "^17.1.1",
    "ts-node": "^9.0.0",
    "tslib": "^2.0.3",
    "typescript": "^4.1.2"
  },
  "version": "1.0.0",
  "directories": {
    "test": "test"
  }
}
