{
  "name": "@sasjs/cli",
  "description": "Command line interface for SASjs",
  "main": "index.js",
  "files": [
    "build/**/*"
  ],
  "scripts": {
    "start": "nodemon --watch \"src/**/*\" --exec \"npm run build && npm run set:permissions\"",
    "set:permissions": "node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "build": "rimraf build && tsc -p . && npm run copy:files",
    "copy:files": "copyfiles -u 1 ./src/config.json ./build/ && npm run copy:doxy",
    "copy:doxy": "copyfiles -u 2 src/doxy/* build/doxy/",
    "test": "npm run test:mocked && npm run test:server",
    "test:server": "jest --silent --config=jest.server.config.js",
    "test:mocked": "jest --silent --runInBand --config=jest.config.js --coverage",
    "semantic-release": "semantic-release -d",
    "lint:fix": "npx prettier --write \"{src,test}/**/*.{ts,tsx,js,jsx,html,css,sass,less,yml,md,graphql}\"",
    "lint": "npx prettier --check \"{src,test}/**/*.{ts,tsx,js,jsx,html,css,sass,less,yml,md,graphql}\""
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "bin": {
    "sasjs": "build/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sasjs/cli.git"
  },
  "keywords": [
    "SAS",
    "Viya",
    "SASjs"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sasjs/cli/issues"
  },
  "homepage": "https://cli.sasjs.io",
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    }
  },
  "dependencies": {
    "@sasjs/adapter": "2.6.3",
    "@sasjs/core": "2.34.4",
    "@sasjs/lint": "1.11.0",
    "@sasjs/utils": "2.20.1",
    "@types/url-parse": "1.4.3",
    "btoa": "1.2.1",
    "chalk": "4.1.1",
    "csv-stringify": "5.6.2",
    "dotenv": "10.0.0",
    "esm": "3.2.25",
    "find": "0.3.0",
    "fs-extra": "10.0.0",
    "get-installed-path": "4.0.8",
    "jsdom": "16.6.0",
    "jwt-decode": "3.1.2",
    "lodash.groupby": "4.6.0",
    "lodash.uniqby": "4.7.0",
    "node-graphviz": "0.1.0",
    "ora": "5.4.1",
    "rimraf": "3.0.2",
    "shelljs": "0.8.4",
    "xml": "1.0.1"
  },
  "devDependencies": {
    "@babel/preset-env": "7.14.5",
    "@babel/preset-typescript": "7.14.5",
    "@types/btoa": "1.2.3",
    "@types/find": "0.2.1",
    "@types/get-installed-path": "4.0.0",
    "@types/jest": "26.0.23",
    "@types/jsdom": "16.2.11",
    "@types/lodash.groupby": "4.6.6",
    "@types/lodash.uniqby": "4.7.6",
    "@types/node": "15.12.2",
    "@types/shelljs": "0.8.8",
    "@types/xml": "1.0.5",
    "babel-jest": "27.0.2",
    "copyfiles": "2.4.1",
    "ghooks": "2.0.4",
    "jest": "27.0.4",
    "jest-cli": "27.0.4",
    "jest-extended": "0.11.5",
    "mock-stdin": "1.0.0",
    "nodemon": "2.0.7",
    "semantic-release": "17.4.3",
    "ts-jest": "27.0.3",
    "ts-node": "10.0.0",
    "tslib": "2.3.0",
    "typescript": "4.3.2",
    "validate-commit-msg": "2.14.0"
  }
}
